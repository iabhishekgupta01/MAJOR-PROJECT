<% layout("/layouts/boilerplate") %>
    <div class="main-page">
        <!-- <h4>All Listings</h4> -->



        <div id="filters">
            <div id="filter">
                <div class="filter-icon">
                    <i class="fa-solid fa-fire"></i>
